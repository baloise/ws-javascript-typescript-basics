{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
